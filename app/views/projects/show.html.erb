
<div class="row">

    <div class="col-md-4">
      <img src="<%= @project.photo_url%>" class="project-image" style="display:block;">
      <br>
      <!-- avatar -->
      <h5>Project Owner</h5>
      <div class="row">
      <div class="col-md-2">
        <img class="avatar" src=" <%= @user.picurl %> " alt="profile pic">
      </div>
      <div class="col-md-10">
        <p><%= @user.firstname %> <%= @user.lastname %> </p>
      </div>
    </div>
    <!-- tags -->
    <br>
    <h5>Related Tags</h5>
    <% @tags.each do |tag| %>
      <span class="label label-info">
        <%= tag.name %>
      </span>
    <% end %>
      <br>
    <br>
  </div>


  <div class="col-md-8">
    <h1 class="project-header">
      <%= @project.name %> Project
    </h1>
    <% if @project.user == @current_user %>
    <%= link_to("Edit", edit_user_project_path(@current_user, @project), class: "right") %>
    <% end %>

    <!-- names & votes -->
    <ul id="name_list" style="padding-left:0;border-bottom:solid 1px rgba(0,0,0,0.08)">
      <% @names.each do |n| %>
        <li style="border-top:solid 1px rgba(0,0,0,0.08); padding 0 0 10px; list-style-type:none;" >
          <div>
            <h3 style="margin:10px 0;" >
            <%= n.name %>
            <span id="vote_<%= n.id %>"><%= n.votes_for.size %></span>
            <span><button id="<%= n.id %>" type="button" class="like-name btn btn-default btn-sm">Like</button></span>
            </h3>
          </div>
        </li>
      <% end %>

      <!-- new name added -->
      <li style="border-top:solid 1px rgba(0,0,0,0.08); padding 0 0 10px; list-style-type:none;">
        <div id="newnamediv" ></div>
      </li>

      <!-- submit new name -->
      <li style="border-top:solid 1px rgba(0,0,0,0.08); padding 10px 0; list-style-type:none;">
        <input id="newname" type="text"><button type="button" id="submitname" class="btn btn-sm btn-success">Submit</button>
      </li>

    </ul>

    <br>
    <!-- description -->
    <h5>Description</h5>
    <p><%= @project.description %></p>

    <hr>
    <!-- comment -->
    <div id="comments">
    <h5>Comments</h5>
        <% @comments.each do |comment|%>
          <div id="comment">
            <div class="row">
              <div class="col-md-2">
                <img class="mini img-circle" src="<%= @user.picurl %>">
              </div>
              <div class="col-md-10">
                <small><%=comment.user.firstname%> said...</small><br>
                <%= comment.body %>
              </div>
           </div>
           <hr>
          </div>
        <% end %>
        </div>
        <div class="row">
           <div class="col-md-2">
              <img class="mini img-circle" src="<%= @user.picurl %>">
            </div>
            <div class="col-md-10">
              <small>add a comment...</small>
              <span><input type="textarea" class="form-control" id="comment-input"></span>
            </div>
          </div>
        </div>
  </div>

</div>

<br>

<script id="voting-template" type="text/x-handlebars-template">
		{{#each voteData}}
				<div>
					{{totalvotes}}
				</div>
		{{/each}}
</script>

<script type="text/javascript">
$(document).ready(function(){
  $("#name_list").on("click", ".like-name", function(event) {
    $.ajax({
      type: "POST",
      url: "/users/<%= @project.user_id %>/projects/<%= @project.id %>",
      data: {nameid: this.id, voterid: <%= @current_user.id %>},
      success: function(data, textStatus, jqXHR) {
        console.log(data);
        $('#vote_' + event.target.id).html(data.vote)
        console.log($('#vote_' + event.target.id).html())
      },
      error: function(jqXHR, textStatus, errorThrown) {
        console.log("Error=" + errorThrown)
        alert("Error=" + errorThrown);
      },
      dataType: "json"
    });
  })
})
</script>

<script type="text/javascript">
$(document).ready(function(){
  $("#submitname").on("click", function(event) {
    if ($("#newname").val() !== "") {
      $.ajax({
        type: "POST",
        url: "/users/<%= @project.user_id %>/projects/<%= @project.id %>/name",
        data: {name: $("#newname").val(), user: <%= @current_user.id %>},
        success: function(data) {
          var namedata = data
          console.log(namedata.name + ", " + namedata.id)
          var newTag = HandlebarsTemplates["names/name"](namedata)
          $("#newnamediv").append(newTag);
          $("#newname").val("")
        },
        error: function(data) {
          alert("Error=" + errorThrown);
        },
        dataType: "json"
      });
    }
  })
})
</script>



<script>

  $(document).ready(function(){
      //add a comment

      $("#comment-input").keypress(function (e){
      if (e.which == 13 ){
        event.preventDefault();
        if ($("#comment-input").val() !== "") {
          console.log("comment-input")
          var postData = {comment: {body: $('#comment-input').val()}}
          var postURL = "<%=user_project_comments_path(@current_user, @project.id)%>"
          $.ajax(
          {
              url : postURL,
              type: "POST",
              data : postData,
              error : function(returnval) {
                console.log("fail");
              },
              success : function (returnval) {
                console.log("success");
                console.log(returnval.comment + returnval.user + returnval.image)
                $('#comments').append("<div id='comment'><div class='row'><div class='col-md-2'><img class='mini img-circle' src= '" + returnval.image + "'></div><div class='col-md-10'><small>" + returnval.user + " said...</small><br>" + returnval.comment + "</div></div><hr></div>");
                $('#comment-input').val("");
              }
          })
        }
      }
    });




  });

</script>



